{
  "name": "emotion-client",
  "version": "1.0.0",
  "description": "Client for emotion analysis of webpages",
  "main": "./src/js/index.js",
  "scripts": {
    "dev": "./node_modules/.bin/webpack --progress --colors",
    "dev:watch": "npm run dev -- --watch",
    "start": "./node_modules/.bin/webpack-dev-server",
    "lint:once": "./node_modules/.bin/gulp eslint",
    "lint": "./node_modules/.bin/gulp eslint:watch",
    "test:once": "NODE_PATH=./src/js ./node_modules/.bin/mocha -r babel-register --compilers jsx:babel-register -r jsdom-global/register -r ignore-styles -r ./test/setup.js --recursive ./test",
    "test": "npm run test:once -- --watch",
    "build": "npm run lint:once && npm run test:once && NODE_ENV=production npm run dev -- -p",
    "gh-pages": "./node_modules/.bin/gh-pages -d dist -b gh-pages",
    "deploy": "npm run build && npm run gh-pages"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ibleedfilm/emotion-client.git"
  },
  "author": "Rem Lampa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ibleedfilm/emotion-client/issues"
  },
  "homepage": "https://github.com/ibleedfilm/emotion-client#readme",
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/chai-enzyme": "^0.6.3",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-enzyme": "^1.0.0-beta.0",
    "clean-webpack-plugin": "^0.1.17",
    "cli-clear": "^1.0.4",
    "css-loader": "^0.28.7",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "eslint": "^4.10.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "gh-pages": "^1.0.0",
    "gulp": "^3.9.1",
    "gulp-eslint": "^4.0.0",
    "gulp-if": "^2.0.2",
    "html-webpack-plugin": "^2.30.1",
    "ignore-styles": "^5.0.1",
    "jsdom": "^11.3.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^4.0.1",
    "node-sass": "^4.5.3",
    "react-test-renderer": "^16.0.0",
    "resolve-url-loader": "^2.2.0",
    "sass-loader": "^6.0.6",
    "sinon": "^4.0.2",
    "sinon-chai": "^2.14.0",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1",
    "webpack-chunk-hash": "^0.5.0",
    "webpack-dev-server": "^2.9.3"
  },
  "dependencies": {
    "axios": "^0.17.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  }
}
